pipeline {

    agent { label 'linux_02' }

    environment {
        WORKSPACE_DIR = "${env.WORKSPACE}"
        RESULT_DIR    = "${env.WORKSPACE}/Result"
        VENV_PATH     = "${env.WORKSPACE}/venv"
        PYTHON        = "${env.WORKSPACE}/venv/bin/python"
        PIP           = "${env.WORKSPACE}/venv/bin/pip"
        PLAYWRIGHT    = "${env.WORKSPACE}/venv/bin/playwright"

        JENKINS_URL   = "http://3.36.219.242:8080"
    }

    stages {

        /* -------------------------------------------------------------
           1. PYTHON VENV SETUP
        ------------------------------------------------------------- */
        stage('Setup Python Environment') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {
                        sh '''
                            python3 -m venv venv
                            venv/bin/pip install --upgrade pip
                            venv/bin/pip install -r requirements.txt
                            venv/bin/playwright install chromium
                        '''
                    }
                }
            }
        }

        /* -------------------------------------------------------------
           2. TOKEN VALIDATION BEFORE TESTS
        ------------------------------------------------------------- */
        stage('Validate Tokens Before Tests') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {

                        withCredentials([
                            file(credentialsId: 'todolist_dev_env_test', variable: 'ENV_FILE'),

                            string(credentialsId: 'JWT_TOKEN', variable: 'JWT_TOKEN'),
                            string(credentialsId: 'JWT_REFRESH_TOKEN', variable: 'JWT_REFRESH_TOKEN'),

                            string(credentialsId: 'KAKAO_ACCESS_TOKEN', variable: 'KAKAO_ACCESS_TOKEN'),
                            string(credentialsId: 'KAKAO_REFRESH_TOKEN', variable: 'KAKAO_REFRESH_TOKEN'),
                            string(credentialsId: 'NAVER_ACCESS_TOKEN', variable: 'NAVER_ACCESS_TOKEN'),
                            string(credentialsId: 'NAVER_REFRESH_TOKEN', variable: 'NAVER_REFRESH_TOKEN'),

                            usernamePassword(
                                credentialsId: 'jenkins-admin',
                                usernameVariable: 'JENKINS_USER',
                                passwordVariable: 'JENKINS_PASS'
                            )
                        ]) {

                            sh '''
                                set +x
                                echo "üîç Token Validation Stage Start..."

                                # ENV_FILE ÎàÑÎùΩ Ïãú fallback
                                if [ -z "$ENV_FILE" ]; then
                                    if [ -f ".env-dev-test" ]; then
                                        export ENV_FILE="$PWD/.env-dev-test"
                                        echo "[WARN] ENV_FILE not provided; fallback to $ENV_FILE"
                                    else
                                        echo "[ERROR] ENV_FILE missing and no fallback .env-dev-test found"; exit 1
                                    fi
                                elif [ ! -f "$ENV_FILE" ]; then
                                    if [ -f ".env-dev-test" ]; then
                                        export ENV_FILE="$PWD/.env-dev-test"
                                        echo "[WARN] ENV_FILE path invalid; fallback to $ENV_FILE"
                                    else
                                        echo "[ERROR] ENV_FILE missing and no fallback available"; exit 1
                                    fi
                                fi

                                #############################################
                                # BACKEND_BASE_URL Î°úÎìú Î∞è Ï†ïÍ∑úÌôî
                                #############################################
                                export BACKEND_BASE_URL="$(
                                    grep -E '^BACKEND_BASE_URL=' "$ENV_FILE" | cut -d '=' -f2- \
                                        | sed 's/^"//;s/"$//' \
                                        | tr -d '\\r' | tr -d '\\n' | tr -d ' '
                                )"
                                echo "[DEBUG] Loaded BACKEND_BASE_URL=$BACKEND_BASE_URL"

                                #############################################
                                # Export TOKENs & Jenkins Admin creds
                                #############################################
                                export JWT_TOKEN="${JWT_TOKEN}"
                                export JWT_REFRESH_TOKEN="${JWT_REFRESH_TOKEN}"

                                export KAKAO_ACCESS_TOKEN="${KAKAO_ACCESS_TOKEN}"
                                export KAKAO_REFRESH_TOKEN="${KAKAO_REFRESH_TOKEN}"
                                export NAVER_ACCESS_TOKEN="${NAVER_ACCESS_TOKEN}"
                                export NAVER_REFRESH_TOKEN="${NAVER_REFRESH_TOKEN}"

                                export JENKINS_USER="${JENKINS_USER}"
                                export JENKINS_PASS="${JENKINS_PASS}"
                                export JENKINS_URL="${JENKINS_URL}"

                                echo "üöÄ Running CI Token Manager (refresh + credential update)"
                                ${PYTHON} ci/ci_token_manager.py || true
                            '''
                        }
                    }
                }
            }
        }


        /* -------------------------------------------------------------
           3. RUN TESTS
        ------------------------------------------------------------- */
        stage('Run Tests') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {

                        withCredentials([
                            file(credentialsId: 'todolist_dev_env_test', variable: 'ENV_FILE'),

                            string(credentialsId: 'JWT_TOKEN', variable: 'JWT_TOKEN'),
                            string(credentialsId: 'JWT_REFRESH_TOKEN', variable: 'JWT_REFRESH_TOKEN'),

                            string(credentialsId: 'KAKAO_ACCESS_TOKEN', variable: 'KAKAO_ACCESS_TOKEN'),
                            string(credentialsId: 'KAKAO_REFRESH_TOKEN', variable: 'KAKAO_REFRESH_TOKEN'),
                            string(credentialsId: 'NAVER_ACCESS_TOKEN', variable: 'NAVER_ACCESS_TOKEN'),
                            string(credentialsId: 'NAVER_REFRESH_TOKEN', variable: 'NAVER_REFRESH_TOKEN')
                        ]) {

                            sh '''
                                set +x
                                echo "üìå Running Tests..."

                                # ENV_FILE ÎàÑÎùΩ Ïãú fallback Ï≤òÎ¶¨
                                if [ -z "$ENV_FILE" ]; then
                                    if [ -f ".env-dev-test" ]; then
                                        export ENV_FILE="$PWD/.env-dev-test"
                                        echo "[WARN] ENV_FILE missing; fallback ‚Üí $ENV_FILE"
                                    else
                                        echo "[ERROR] ENV_FILE missing and fallback not found"; exit 1
                                    fi
                                fi

                                # Tokens
                                export JWT_TOKEN="${JWT_TOKEN}"
                                export JWT_REFRESH_TOKEN="${JWT_REFRESH_TOKEN}"
                                export KAKAO_ACCESS_TOKEN="${KAKAO_ACCESS_TOKEN}"
                                export KAKAO_REFRESH_TOKEN="${KAKAO_REFRESH_TOKEN}"
                                export NAVER_ACCESS_TOKEN="${NAVER_ACCESS_TOKEN}"
                                export NAVER_REFRESH_TOKEN="${NAVER_REFRESH_TOKEN}"

                                # BACKEND_BASE_URL Î°úÎìú
                                export BACKEND_BASE_URL="$(
                                    grep -E '^BACKEND_BASE_URL=' "$ENV_FILE" | cut -d '=' -f2- \
                                        | sed 's/^"//;s/"$//' \
                                        | tr -d '\\r' | tr -d '\\n' | tr -d ' '
                                )"

                                echo "[DEBUG] TEST BACKEND_BASE_URL=$BACKEND_BASE_URL"

                                set -x
                                ${PYTHON} -m pytest --disable-warnings --maxfail=1 || true
                            '''
                        }
                    }
                }
            }
        }


        /* -------------------------------------------------------------
           4. ARCHIVE REPORT
        ------------------------------------------------------------- */
        stage('Archive Test Report') {
            steps {
                archiveArtifacts artifacts: 'Result/**/*.html', fingerprint: true
            }
        }
    }

    post {
        always {
            echo "üéâ Ï†ÑÏ≤¥ ÌååÏù¥ÌîÑÎùºÏù∏ ÏôÑÎ£å!"
        }
    }
}
