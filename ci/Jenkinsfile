pipeline {
    agent { label 'linux_02' }

    environment {
        WORKSPACE_DIR = "${env.WORKSPACE}"
        RESULT_DIR    = "${env.WORKSPACE}/Result"
        VENV_PATH     = "${env.WORKSPACE}/venv"
        PYTHON        = "${env.WORKSPACE}/venv/bin/python"
        PIP           = "${env.WORKSPACE}/venv/bin/pip"
        PLAYWRIGHT    = "${env.WORKSPACE}/venv/bin/playwright"
    }

    stages {

        /* =======================================
           1. Python Í∞ÄÏÉÅÌôòÍ≤Ω ÏÑ∏ÌåÖ
        ======================================= */
        stage('Setup Python Environment') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {
                        sh '''
                            echo "üêç Python Í∞ÄÏÉÅÌôòÍ≤Ω ÏÉùÏÑ±..."
                            python3 -m venv venv

                            echo "üì¶ pip ÏóÖÍ∑∏Î†àÏù¥Îìú..."
                            venv/bin/pip install --upgrade pip

                            echo "üì¶ requirements ÏÑ§Ïπò..."
                            venv/bin/pip install -r requirements.txt

                            echo "üé≠ Playwright ÏÑ§Ïπò..."
                            venv/bin/playwright install chromium
                        '''
                    }
                }
            }
        }

        /* =======================================
        2. ÌÜ†ÌÅ∞ Í≤ÄÏ¶ù Î∞è Í∞±Ïã† (ÏµúÏ¢Ö Í≤∞Ìï©Îêú Î≤ÑÏ†Ñ)
        ======================================= */
        stage('Validate and Refresh Tokens') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {

                        withCredentials([
                            file(credentialsId: 'todolist_dev_env_test', variable: 'ENV_FILE'),

                            string(credentialsId: 'KAKAO_ACCESS_TOKEN',  variable: 'KAKAO_ACCESS_TOKEN'),
                            string(credentialsId: 'KAKAO_REFRESH_TOKEN', variable: 'KAKAO_REFRESH_TOKEN'),
                            string(credentialsId: 'NAVER_ACCESS_TOKEN',  variable: 'NAVER_ACCESS_TOKEN'),
                            string(credentialsId: 'NAVER_REFRESH_TOKEN', variable: 'NAVER_REFRESH_TOKEN'),
                            string(credentialsId: 'WEB_TEST_JWT_TOKEN',  variable: 'WEB_TEST_JWT_TOKEN'),

                            usernamePassword(credentialsId: 'jenkins-admin',
                                usernameVariable: 'JENKINS_USER',
                                passwordVariable: 'JENKINS_PASS')
                        ]) {

                            sh '''
                                set +x
                                echo "üîê Exporting Credentials..."

                                # -----------------------------
                                # Export tokens
                                # -----------------------------
                                export KAKAO_ACCESS_TOKEN="${KAKAO_ACCESS_TOKEN}"
                                export KAKAO_REFRESH_TOKEN="${KAKAO_REFRESH_TOKEN}"
                                export NAVER_ACCESS_TOKEN="${NAVER_ACCESS_TOKEN}"
                                export NAVER_REFRESH_TOKEN="${NAVER_REFRESH_TOKEN}"
                                export WEB_TEST_JWT_TOKEN="${WEB_TEST_JWT_TOKEN}"

                                export JENKINS_USER="${JENKINS_USER}"
                                export JENKINS_PASS="${JENKINS_PASS}"

                                export ENV_FILE="${ENV_FILE}"

                                # -----------------------------
                                # Î∞©Î≤ï B: BACKEND_BASE_URLÏùÑ ENV_FILEÏóêÏÑú Î°úÎìú
                                # -----------------------------
                                BACKEND_BASE_URL_RAW="$(grep -E '^[[:space:]]*BACKEND_BASE_URL=' "$ENV_FILE" | sed 's/^[[:space:]]*//')"
                                BACKEND_BASE_URL_VALUE="${BACKEND_BASE_URL_RAW#BACKEND_BASE_URL=}"
                                BACKEND_BASE_URL_CLEAN="$(echo "$BACKEND_BASE_URL_VALUE" | sed 's/^"//;s/"$//')"
                                export BACKEND_BASE_URL="$BACKEND_BASE_URL_CLEAN"

                                echo "Using BACKEND_BASE_URL: $BACKEND_BASE_URL_CLEAN"

                                if [ -z "$BACKEND_BASE_URL" ]; then
                                    echo "‚ùå ERROR: BACKEND_BASE_URL not found in ENV_FILE!"
                                    exit 1
                                fi

                                echo "üîê Export Done!"
                                set -x

                                bash ci/check_token_valid.sh
                            '''
                        }
                    }
                }
            }
        }


        /* =======================================
           3. TEST Ïã§Ìñâ
        ======================================= */
        stage('Run Tests') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {

                        withCredentials([
                            file(credentialsId: 'todolist_dev_env_test', variable: 'ENV_FILE'),

                            string(credentialsId: 'KAKAO_ACCESS_TOKEN',     variable: 'KAKAO_ACCESS_TOKEN'),
                            string(credentialsId: 'KAKAO_REFRESH_TOKEN',    variable: 'KAKAO_REFRESH_TOKEN'),
                            string(credentialsId: 'NAVER_ACCESS_TOKEN',     variable: 'NAVER_ACCESS_TOKEN'),
                            string(credentialsId: 'NAVER_REFRESH_TOKEN',    variable: 'NAVER_REFRESH_TOKEN'),
                            string(credentialsId: 'WEB_TEST_JWT_TOKEN',     variable: 'WEB_TEST_JWT_TOKEN')
                        ]) {

                            sh '''
                                ###############################################
                                # üîê Secret Token Export
                                ###############################################
                                set +x
                                echo "üìå Loading Tokens..."

                                export KAKAO_ACCESS_TOKEN="${KAKAO_ACCESS_TOKEN}"
                                export KAKAO_REFRESH_TOKEN="${KAKAO_REFRESH_TOKEN}"
                                export NAVER_ACCESS_TOKEN="${NAVER_ACCESS_TOKEN}"
                                export NAVER_REFRESH_TOKEN="${NAVER_REFRESH_TOKEN}"
                                export WEB_TEST_JWT_TOKEN="${WEB_TEST_JWT_TOKEN}"

                                echo "üîê Tokens Loaded!"
                                set -x

                                ###############################################
                                # üîê Load ENV File
                                ###############################################
                                set +x
                                echo "üìå Loading ENV File..."

                                set -a
                                while IFS= read -r line || [ -n "$line" ]; do
                                    trimmed=$(echo "$line" | sed 's/^[[:space:]]*//;s/[[:space:]]*$//')

                                    if [ -z "$trimmed" ] || [ "$(printf %.1s "$trimmed")" = "#" ]; then
                                        continue
                                    fi

                                    if echo "$trimmed" | grep -q "="; then
                                        key=$(echo "$trimmed" | cut -d '=' -f 1)
                                        value=$(echo "$trimmed" | cut -d '=' -f 2-)
                                        export "$key=$value"
                                    fi
                                done < "$ENV_FILE"
                                set +a

                                echo "üîê ENV Loaded!"
                                set -x

                                ###############################################
                                # ‚ñ∂ Pytest Ïã§Ìñâ
                                ###############################################
                                ${PYTHON} -m pytest --disable-warnings --maxfail=1 || true
                            '''
                        }
                    }
                }
            }
        }

        /* =======================================
           4. Report Ï†ÄÏû•
        ======================================= */
        stage('Archive Test Report') {
            steps {
                script {
                    echo "üìÑ Saving HTML Test Reports..."
                    archiveArtifacts artifacts: 'Result/**/*.html', fingerprint: true
                }
            }
        }
    }

    post {
        always {
            script {
                echo "üéâ Pipeline Completed!"
            }
        }
    }
}
