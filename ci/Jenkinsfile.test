pipeline {

    agent { label 'linux_02' }

    environment {
        WORKSPACE_DIR = "${env.WORKSPACE}"
        RESULT_DIR    = "${env.WORKSPACE}/Result"
        VENV_PATH     = "${env.WORKSPACE}/venv"
        PYTHON        = "${env.WORKSPACE}/venv/bin/python"
        PIP           = "${env.WORKSPACE}/venv/bin/pip"
        PLAYWRIGHT    = "${env.WORKSPACE}/venv/bin/playwright"
    }

    stages {

        /* ---------------------------------------------------------------
           1. Checkout
        ---------------------------------------------------------------- */
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        /* ---------------------------------------------------------------
           2. Setup Python Environment
        ---------------------------------------------------------------- */
        stage('Setup Python Environment') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {
                        sh '''
                            # Í∞ÄÏÉÅÌôòÍ≤Ω ÏÉùÏÑ±
                            python3 -m venv venv

                            # Í∞ÄÏÉÅÌôòÍ≤Ω ÌôúÏÑ±Ìôî Î∞è ÏùòÏ°¥ÏÑ± ÏÑ§Ïπò
                            . venv/bin/activate
                            pip install --upgrade pip
                            pip install -r requirements.txt
                            playwright install chromium
                        '''
                    }
                }
            }
        }

        /* ---------------------------------------------------------------
           3. Run Tests (Latest Credentials)
        ---------------------------------------------------------------- */
        stage('Run Tests') {
            steps {
                script {
                    dir(env.WORKSPACE_DIR) {

                        withCredentials([
                            file(credentialsId: 'todolist_dev_env_test', variable: 'ENV_FILE'),

                            string(credentialsId: 'JWT_TOKEN', variable: 'JWT_TOKEN'),
                            string(credentialsId: 'JWT_REFRESH_TOKEN', variable: 'JWT_REFRESH_TOKEN'),

                            string(credentialsId: 'KAKAO_ACCESS_TOKEN', variable: 'KAKAO_ACCESS_TOKEN'),
                            string(credentialsId: 'KAKAO_REFRESH_TOKEN', variable: 'KAKAO_REFRESH_TOKEN'),
                            string(credentialsId: 'NAVER_ACCESS_TOKEN', variable: 'NAVER_ACCESS_TOKEN'),
                            string(credentialsId: 'NAVER_REFRESH_TOKEN', variable: 'NAVER_REFRESH_TOKEN'),

                            usernamePassword(
                                credentialsId: 'jenkins-admin',
                                usernameVariable: 'JENKINS_USER',
                                passwordVariable: 'JENKINS_PASS'
                            )
                        ]) {

                            sh '''#!/bin/bash
                                set +x
                                echo "üìå Running Tests..."

                                export BACKEND_BASE_URL="$(
                                    grep -E '^BACKEND_BASE_URL=' "$ENV_FILE" \
                                        | cut -d '=' -f2- \
                                        | sed 's/^"//;s/"$//' | tr -d '\\r' | tr -d '\\n' | tr -d ' '
                                )"

                                export WEB_BASE_URL="$(
                                    grep -E '^WEB_BASE_URL=' "$ENV_FILE" \
                                        | cut -d '=' -f2- \
                                        | sed 's/^"//;s/"$//' | tr -d '\\r' | tr -d '\\n' | tr -d ' '
                                )"

                                echo "[DEBUG] ‚≠ê BACKEND_BASE_URL=$BACKEND_BASE_URL"
                                echo "[DEBUG] ‚≠ê WEB_BASE_URL=$WEB_BASE_URL"

                                export JWT_TOKEN
                                export JWT_REFRESH_TOKEN
                                export KAKAO_ACCESS_TOKEN
                                export KAKAO_REFRESH_TOKEN
                                export NAVER_ACCESS_TOKEN
                                export NAVER_REFRESH_TOKEN

                                echo "[DEBUG] üìå Loaded Tokens:"
                                echo "[DEBUG]   JWT_TOKEN: ${JWT_TOKEN:0:20}..."
                                echo "[DEBUG]   KAKAO_ACCESS_TOKEN: ${KAKAO_ACCESS_TOKEN:0:20}..."
                                echo "[DEBUG]   NAVER_ACCESS_TOKEN: ${NAVER_ACCESS_TOKEN:0:20}..."

                                export JENKINS_USER
                                export JENKINS_PASS

                                cd ${WORKSPACE_DIR}
                                echo "Current workspace path: ${WORKSPACE_DIR}"
                                
                                $PYTHON -m pytest --disable-warnings --maxfail=1
                            '''
                        }
                    }
                }
            }
        }

        /* ---------------------------------------------------------------
           4. Archive Test Reports
        ---------------------------------------------------------------- */
        stage('Archive Test Report') {
            steps {
                archiveArtifacts artifacts: 'Result/**/*.html', fingerprint: true
            }
        }
    }

    post {
        always {
            echo "üéâ Test Job Finished!"
        }
    }
}
